<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="250dp">

    <ImageView
            android:layout_width="170dp"
            android:layout_height="190dp"
            android:id="@+id/card_background"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.964"/>

    <ImageView
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:id="@+id/card_background2"
            app:layout_constraintBottom_toTopOf="@+id/card_title"
            app:layout_constraintEnd_toEndOf="@+id/card_background"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/card_background"
            app:layout_constraintVertical_bias="1.0"/>

        <Button
                android:text="Capturar"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:id="@+id/button"
                android:background="@drawable/btn_cardview"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/card_background"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="@+id/card_background"/>
        <TextView
                android:text="Globo Esporte"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_title"
                app:layout_constraintBottom_toTopOf="@+id/card_gen"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="@+id/card_background"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="Esportes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_gen"
                app:layout_constraintBottom_toTopOf="@+id/value"
                app:layout_constraintStart_toStartOf="@+id/card_background"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
        />
        <TextView
                android:text="B$ 45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/value"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/card_background"
                app:layout_constraintStart_toStartOf="@+id/card_background"
                android:layout_marginStart="8dp"/>


</android.support.constraint.ConstraintLayout>

