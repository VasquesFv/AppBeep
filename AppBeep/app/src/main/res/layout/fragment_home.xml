<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".HomeActivity">

    <uses-permission android:name="android.permission.CAMERA"></uses-permission>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:src="@drawable/headerhome"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"/>

        <ProgressBar
                android:layout_width="380dp"
                android:layout_height="15dp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:indeterminateTint="#ffffff"
                android:progressBackgroundTint="#ffffff"
                android:layout_marginTop="80dp"
                android:layout_centerHorizontal="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="110dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="R$ 50,00"
                android:textSize="24dp"
                android:textColor="#ffffff"
                android:layout_marginStart="16dp"
                android:layout_marginTop="140dp"/>

        <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/backgroundcircle"
                android:layout_marginTop="110dp"
                android:layout_marginStart="285dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="90dp"
                android:layout_height="91dp"
                android:src="@drawable/alessandrobeep"
                android:layout_marginTop="120dp"
                android:layout_marginStart="295dp"/>

        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/imgmedal"
                android:layout_marginTop="160dp"
                android:layout_marginStart="290dp"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="200dp">

            <ProgressBar
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    style="?android:attr/progressBarStyleLarge"
                    android:visibility="visible"
                    android:layout_marginStart="290dp"
                    android:layout_marginTop="90dp"/>

            <ProgressBar
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    style="?android:attr/progressBarStyleLarge"
                    android:visibility="visible"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="65dp"/>

            <ProgressBar
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    style="?android:attr/progressBarStyleLarge"
                    android:visibility="visible"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="90dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_alignParentBottom="true">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/rectanglebackground"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="43dp"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/usericon"
                android:layout_marginStart="350dp"
                android:layout_marginTop="55dp"
                android:id="@+id/userbutton"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/walleticon"
                android:layout_marginStart="20dp"
                android:layout_marginTop="55dp"
                android:id="@+id/walletbutton"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/imgrecognize"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:id="@+id/buttonRecognize"
                android:layout_centerHorizontal="true"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/linebottonbar"
                android:layout_marginStart="20dp"
                android:layout_marginTop="90dp"
                android:layout_centerHorizontal="true"/>



    </RelativeLayout>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

</RelativeLayout>
