<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:id="@+id/slidelinearlayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:id="@+id/slideimage"
                android:layout_width="250dp"
                android:layout_height="250dp"/>

        <TextView
                android:text="Seja ouvido com Bee App"
                android:textSize="28sp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp" android:layout_alignParentBottom="true"
                android:layout_marginBottom="200dp"
                android:textAlignment="center"
                android:textStyle="bold"/>

        <TextView
                android:text="Com o Bee App suas emissoras favotias e radios irao te ouvir"
                android:textSize="17sp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="150dp"/>
    </RelativeLayout>

</LinearLayout>
